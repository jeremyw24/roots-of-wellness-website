---
const services = [
  {
    step: '01',
    name: 'Musculoskeletal Conditions',
    description: {
      type: 'list',
      items: [
        'Neck, shoulder, and back pain',
        'Sports injuries and recovery',
        'Arthritis and joint pain',
        'Sciatica and nerve pain',
        'Muscle tension and stiffness'
      ]
    }
  },
  {
    step: '02',
    name: 'Digestive Health',
    description: {
      type: 'list',
      items: [
        'Irritable bowel syndrome (IBS)',
        'Constipation or diarrhea',
        'Acid reflux and indigestion',
        'Bloating and food sensitivities',
        'Bowel and intestinal conditions'
      ]
    }
  },
  {
    step: '03',
    name: 'Mental Health',
    description: {
      type: 'list',
      items: [
        'Stress and anxiety',
        'Depression',
        'Insomnia and sleep disturbances',
        'Fatigue and burnout'
      ]
    }
  },
  {
    step: '04',
    name: 'Womenâ€™s Health',
    description: {
      type: 'list',
      items: [
        'Menstrual irregularities and pain',
        'Hormonal imbalances (e.g., PCOS, endometriosis)',
        'Pregnancy care and postpartum recovery'
      ]
    }
  },
  {
    step: '05',
    name: 'Facial Conditions',
    description: {
      type: 'list',
      items: [
        'Cosmetic acupuncture',
        'Teeth grinding and jaw tension',
        'Facial muscle weakness or tightness',
        'Facial numbness or nerve related concerns',
        'Eyes, Ears, Nose and Throat (EENT) issues'
      ]
    }
  },
  {
    step: '06',
    name: 'Other Conditions',
    description: {
      type: 'list',
      items: [
        'Headaches and migraines',
        'Allergies and sinus issues',
        'Skin conditions (e.g., eczema, acne)',
        'Low immunity and frequent colds',
